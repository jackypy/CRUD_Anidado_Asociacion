<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<h2>Nuevo empleado para <%=@company.name%></h2>
<%= form_with(model: [@company, @employee], local: true) do |form| %>

<div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
</div>
<div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
</div>
<div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email %>
</div>
<div class="form-group">
    <%= fields_for :area do |area_field| %>
    <%= form.label :area  %>
    <%= form.select :area, @areas %>
</div>
  <% end %>

<div class="form-group">
    <%= form.submit 'Guardar', class: "btn btn-success"  %>
</div>
  <% end %>

<% @employees.each do |employee| %>

<table class="table">
  <td>Name:<%= employee.first_name %></td>
  <td>Last name:<%= employee.last_name %></td>
  <td>Email:<%= employee.email %></td>
  <td><%=link_to 'Delete', company_employee_path(@company, employee), method: 'delete', class: 'btn btn-danger'%></td>

</table>



<% end %>
<div class="">
  <%= link_to 'Edit', edit_company_path(@company) %> |
  <%= link_to 'Back', companies_path %>
</div>
